<h3>Login</h3>

<div class="well">
  <%= form_tag("/login", method: "post") do %>
    <%= label_tag(:username, "Company Name") %>
    <%= text_field_tag(:username) %>
    <br/>
    <%= label_tag(:password, "Password") %>
    <%= password_field_tag(:password) %>
    <br/>
    <%= submit_tag("Login", class: "btn btn-primary") %>
  <% end %>
</div>